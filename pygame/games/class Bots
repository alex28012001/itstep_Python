import pygame

SPEED_BOT = 1
OTSTUP = 100
bot_right = bot_left = False
class Bots(object):


    def __init__(self, bot_x, bot_y, fighter_x, fighter_y):
        self.fighter_x = fighter_x
        self.fighter_y = fighter_y
        self.bot_x = bot_x
        self.bot_y = bot_y
        self.image = pygame.image.load("images/bot.png").convert_alpha()
        self.SPEED_BOT = SPEED_BOT
        self.OTSTUP = OTSTUP



    def update(self):
        bot_right = bot_left = False


        """Передвежение бота по оси x"""

        if self.fighter_x < self.bot_x:
            bot_right = True


        if self.fighter_x > self.bot_x:
            bot_left = True





        if bot_right == True:
            if self.bot_x > self.fighter_x + self.OTSTUP:
                self.bot_x -= self.SPEED_BOT

        if bot_left == True:
            if self.bot_x < self.fighter_x - self.OTSTUP:
                self.bot_x += self.SPEED_BOT


    def draw(self, surf):

        surf.blit(self.image, (self.bot_x, self.bot_y))
